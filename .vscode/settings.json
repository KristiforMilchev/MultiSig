{
    "editor.formatOnSave": true,
    "explorer.fileNesting.patterns": {
        "*.dart": "$(capture).dart",
        "*.razor": "$(capture).razor.cs, $(capture).razor.css"
    },
    "explorer.fileNesting.enabled": true,
    "[ruby]": {
        "editor.defaultFormatter": "Shopify.ruby-lsp",
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.semanticHighlighting.enabled": true
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.rulers": [
        120
    ],
    "editor.accessibilitySupport": "off",
    "dart.debugExternalPackageLibraries": true,
    "dart.debugSdkLibraries": true,
    "dart.showInspectorNotificationsForWidgetErrors": false,
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "never",
    "workbench.editor.enablePreview": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.centerLayout": false,
    "terminal.integrated.defaultProfile.linux": "JavaScript Debug Terminal",
    "workbench.editor.showTabs": "none",
    "terminal.integrated.tabFocusMode": false,
    "editor.gotoLocation.alternativeDeclarationCommand": "editor.action.revealDefinitionAside",
    "editor.gotoLocation.alternativeDefinitionCommand": "editor.action.revealDefinitionAside",
    "editor.gotoLocation.alternativeTypeDefinitionCommand": "editor.action.revealDefinitionAside",
    "editor.minimap.enabled": false,
    "terminal.integrated.profiles.osx": {
        "zsh": {
            "path": "/bin/zsh -l",
            "args": [
                "-l"
            ]
        }
    },
    "terminal.integrated.env.linux": {
        "LD_PRELOAD": null,
    },
    "go.goroot": "/home/kristifor/software/go",
    "vsicons.presets.hideExplorerArrows": true,
    "workbench.activityBar.location": "hidden",
    "workbench.editor.editorActionsLocation": "hidden",
    "breadcrumbs.enabled": false,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "workbench.colorTheme": "GitHub Dark",
    "go.toolsManagement.autoUpdate": true,
    "editor.fontSize": 16,
}
